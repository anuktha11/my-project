    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <script>
        function changeQuantity(cartId, proId, count, index, price,index2) {
            let quantity = parseInt(document.getElementById(proId).innerHTML)
            let Index = parseInt(index)
            let count1 = parseInt(count)
            let Price = document.getElementById(price).innerHTML
           

            $.ajax({
                url: '/cartqntyincrese',
                data: {
                    cart: cartId,
                    product: proId,
                    count: count1,
                    quantity: quantity,
                },
                method: 'patch',
                success: (response) => {
                    if (response.remove) {
                        detelecartitem(proId)
                    } else {
                        document.getElementById(proId).innerHTML = quantity + count;
                        document.getElementById("total1").innerHTML = response.Total
                        document.getElementById("total").innerHTML = response.Total
                        document.getElementById(Index).innerHTML = Price * (quantity + count1)  
                    }
                },
                error: (xhr) => {
                    if (xhr.status === 400) {
                        const response = xhr.responseJSON;
                        swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: response.message,
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                }
            })
        }
    </script>

    <script>

        function detelecartitem(proId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/removeproduct",
                        data: {

                            product: proId,
                        },
                        method: "delete",
                        success: (response) => {
                            if ((response.remove = true)) {
                                location.reload();
                            }
                        },
                    });
                }
            });
        }
    </script>
